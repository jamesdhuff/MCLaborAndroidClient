<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ClockInActivity" >

    <TextView
        android:id="@+id/txtClockInJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinClockInWorkSite"
        android:layout_below="@+id/spinClockInWorkSite"
        android:layout_marginTop="32dp"
        android:text="Select a Job..." />

    <Spinner
        android:id="@+id/spinClockInJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtClockInJob"
        android:layout_below="@+id/txtClockInJob"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/spinClockInWorkSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtClockInWorkSite"
        android:layout_below="@+id/txtClockInWorkSite"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnClockIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:minHeight="72dp"
        android:minWidth="260dp"
        android:onClick="btnClockInClick"
        android:text="Clock In" />

    <TextView
        android:id="@+id/txtClockInEmpName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Joe Schmoe"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtClockInWorkSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtClockInEmpName"
        android:layout_below="@+id/txtClockInEmpName"
        android:layout_marginTop="36dp"
        android:text="Select a Work Site..." />

</RelativeLayout>
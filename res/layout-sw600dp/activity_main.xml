<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnLogin7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLogin4"
        android:layout_below="@id/btnLogin4"
        android:layout_marginTop="28dp"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginNumBtnClick"
        android:text="7"
        android:textSize="32sp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnLoginClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLogin7"
        android:layout_below="@+id/btnLogin7"
        android:layout_marginTop="28dp"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginClearBtnClick"
        android:text="Clear"
        android:textAllCaps="true"
        android:textColor="#990000"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/txtLoginInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/textviewborder"
        android:gravity="center_vertical|center_horizontal"
        android:maxHeight="76dp"
        android:maxLength="10"
        android:maxLines="1"
        android:maxWidth="440dp"
        android:minHeight="76dp"
        android:minWidth="440dp"
        android:textColor="#000000"
        android:textSize="32sp" />

    <Button
        android:id="@+id/btnLogin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnLogin1"
        android:layout_alignBottom="@+id/btnLogin1"
        android:layout_centerHorizontal="true"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginNumBtnClick"
        android:text="2"
        android:textSize="32sp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnLogin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnLogin2"
        android:layout_alignBottom="@+id/btnLogin2"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@id/btnLogin2"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginNumBtnClick"
        android:text="3"
        android:textSize="32sp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnLogin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLoginInput"
        android:layout_marginRight="28dp"
        android:layout_marginTop="36dp"
        android:layout_toLeftOf="@id/btnLogin2"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginNumBtnClick"
        android:text="1"
        android:textSize="32sp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnLogin4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLogin1"
        android:layout_below="@+id/btnLogin1"
        android:layout_marginTop="28dp"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginNumBtnClick"
        android:text="4"
        android:textSize="32sp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnLogin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnLogin4"
        android:layout_alignBottom="@+id/btnLogin4"
        android:layout_alignLeft="@+id/btnLogin2"
        android:layout_centerHorizontal="true"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginNumBtnClick"
        android:text="5"
        android:textSize="32sp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnLogin6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnLogin5"
        android:layout_alignBottom="@+id/btnLogin5"
        android:layout_alignLeft="@+id/btnLogin3"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginNumBtnClick"
        android:text="6"
        android:textSize="32sp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnLogin8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnLogin7"
        android:layout_alignBottom="@+id/btnLogin7"
        android:layout_alignLeft="@+id/btnLogin5"
        android:layout_centerHorizontal="true"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginNumBtnClick"
        android:text="8"
        android:textSize="32sp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnLogin9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnLogin8"
        android:layout_alignBottom="@+id/btnLogin8"
        android:layout_alignLeft="@+id/btnLogin6"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginNumBtnClick"
        android:text="9"
        android:textSize="32sp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnLogin0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLogin8"
        android:layout_alignTop="@+id/btnLoginClear"
        android:layout_centerHorizontal="true"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginNumBtnClick"
        android:text="0"
        android:textSize="32sp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnLoginGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLogin9"
        android:layout_alignTop="@+id/btnLogin0"
        android:minHeight="128dip"
        android:minWidth="128dip"
        android:onClick="loginGoBtnClick"
        android:text="Next"
        android:textAllCaps="true"
        android:textColor="#009900"
        android:textSize="28sp"
        android:textStyle="bold" />

</RelativeLayout>